    <!--<item android:drawable="@color/loginblue"/>-->

    <item android:state_focused="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/blue" />
            <corners android:radius="275dp" />
            <solid android:color="@color/blue" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/blue" />
            <corners android:radius="275dp" />
            <solid android:color="@color/blue" />
        </shape>
    </item>

    <item  android:state_checked="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/blue" />
            <corners android:radius="275dp" />
            <solid android:color="@color/blue" />
        </shape>
    </item>
    <item  android:state_enabled="false">
        <shape>
            <stroke android:width="1dp" android:color="@color/graybackground" />
            <corners android:radius="275dp" />
            <solid android:color="@color/graybackground" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="1dp" android:color="@color/loginblue" />
            <corners android:radius="275dp" />
            <solid android:color="@color/loginblue" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>
</selector>